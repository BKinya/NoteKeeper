<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical"
    tools:context=".fragments.Tab1">

    <TextView
        style="@style/noteTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="My Notes" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/recyclerview_margin"
        android:layout_marginTop="@dimen/activity_margin_Top"
        android:layout_marginEnd="@dimen/recyclerview_margin"
        android:layout_marginBottom="@dimen/recyclerview_margin" />
</LinearLayout>


